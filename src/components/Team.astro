const images = await Astro.glob('../assets/team/*.jpg');
const filteredImages = images.filter((file) => {
  const fileName = file.default.src.match(/\/([^\/?]+)\.[a-z]+(\?|$)/i)[1];
  return fileName !== 'placeholder';
});
---

<!-- <h3 class="text-2xl font-semibold text-center text-blue-600">
  run with ❤️ for students by students
</h3> -->
<div class="relative flex justify-around overflow-x-hidden">
  <div
    class="flex flex-row pt-20 animate-marquee3 lg:animate-marquee whitespace-nowrap"
  >
    {
      filteredImages.map((image) => (
        <img
          src={image.default.src}
          class="w-h-20 lg:mx-4.5 mx-2 h-16 rounded-full border-4 hover:border-[#5884FB] md:h-20"
        />
      ))
    }
  </div>
  <div
    class="absolute flex flex-row pt-20 animate-marquee4 lg:animate-marquee2 whitespace-nowrap"
  >
    {
      filteredImages.map((image) => (
        <img
          src={image.default.src}
          class="w-h-20 lg:mx-4.5 mx-2 h-16 rounded-full border-4 hover:border-[#5884FB] md:h-20"
        />
      ))
    }
  </div>
</div>

<style>
