---
import fg from "fast-glob";
const collections: string[] = fg.sync("src/assets/team/*");
function capitalizeFirstLetter(string: string) {
  return string.charAt(0).toUpperCase() + string.slice(1);
}
---

<div class="flex flex-row my-10 overflow-x-auto scroll-smooth">
  {
    collections.map((image) => (
      <>
        <img
          src={image}
          class="flex mr-7 h-20 w-h-20 rounded-full border-4 hover:border-[#5884FB]"
        />
        <h1>
          {
            false &&
            capitalizeFirstLetter(
              image.replace("src/assets/team/", "").replace(".jpg", "")
            )}
        </h1>
      </>
    ))
  }
</div>


<style>
  /* Hide the verticle scroll bar */
  /* Chrome */
  *::-webkit-scrollbar {
      width: 10px;
  }
  /*Firefox and Edge*/
  * {
      scrollbar-width: none;
      -ms-overflow-style: none;
  }
</style>
