---
import fg from "fast-glob";
const collections: string[] = fg.sync("src/assets/team/*");
---

<!-- <h3 class="text-2xl font-semibold text-center text-blue-600">
  run with ❤️ for students by students
</h3> -->
<div class="relative flex justify-around overflow-x-hidden">
  <div
    class="flex flex-row pt-10 animate-marquee3 lg:animate-marquee whitespace-nowrap"
  >
    {
      collections.map((image) => (
        <img
          src={image}
          class="w-h-20 h-16 rounded-full border-4 mx-2 lg:mx-4.5 hover:border-[#5884FB] md:h-20"
        />
      ))
    }
  </div>
  <div
    class="absolute flex flex-row pt-10 animate-marquee4 lg:animate-marquee2 whitespace-nowrap"
  >
    {
      collections.map((image) => (
        <img
          src={image}
          class="w-h-20 h-16 rounded-full border-4 mx-2 lg:mx-4.5 hover:border-[#5884FB] md:h-20"
        />
      ))
    }
  </div>
</div>

<style>
  /* Hide the verticle scroll bar */
  /* Chrome */
  *::-webkit-scrollbar {
    width: 10px;
  }
  /*Firefox and Edge*/
  * {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
</style>
