---
export interface Props {
  title: string;
}
const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <!-- Meta Tags -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- HTML Meta Tags -->
    <title>McMaster Computer Science Society</title>
    <meta
      name="description"
      content="Connecting the science with the
students through computers"
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://mcmastercs.ca/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="McMaster Computer Science Society" />
    <meta
      property="og:description"
      content="Connecting the science with the
students through computers"
    />
    <meta property="og:image" content="https://mcmastercs.ca/thumbnail.png" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="mcmastercs.ca" />
    <meta property="twitter:url" content="https://mcmastercs.ca/" />
    <meta name="twitter:title" content="McMaster Computer Science Society" />
    <meta
      name="twitter:description"
      content="Connecting the science with the
students through computers"
    />
    <meta name="twitter:image" content="https://mcmastercs.ca/thumbnail.png" />

    <!-- Meta Tags Generated via https://www.opengraph.xyz -->

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Noto+Sans:wght@100;300;400;500;600;700;800;900&display=swap");
  body {
    font-family: "Noto Sans", sans-serif;
  }
</style>
